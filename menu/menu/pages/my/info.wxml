<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <tui-list-cell hover="{{false}}">
      <view class="tui-line-cell">
        <view class="tui-title">昵称</view>
        <input placeholder-class="phcolor" class="tui-input" name="name" placeholder="请输入昵称" maxlength="50" type="text" value="{{name}}" />
        
      </view>
    </tui-list-cell>
     
    <tui-list-cell hover="{{false}}">
      <view class="tui-line-cell">
        <view class="tui-title">手机号</view>
        <input placeholder-class="phcolor" class="tui-input" name="mobile" placeholder="请输入手机号" maxlength="50" type="text" value="{{phone}}"/>
      </view>
    </tui-list-cell>
    
     
     

    <view class="tui-btn-box">
      <button class="btn-primary" hover-class="btn-hover" formType="submit" type="primary">修改</button>
  
    </view>
  </form>
</view>